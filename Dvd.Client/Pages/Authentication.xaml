<Window x:Class="Client.Pages.Authentication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Pages"
		xmlns:controls="http://metro.mahapps.com/winf/xaml/controls"
        mc:Ignorable="d"
        Title="Authentication" Height="1080" Width="1920
" WindowStartupLocation="CenterScreen" WindowStyle="None" WindowState="Maximized" >
	<Grid>
		<Image Margin="0,0,955,0" Source="/Public/Dvd.png" Stretch="Fill"/>

		<Grid  Panel.ZIndex="-1" Height="1080" Margin="965,0,0,0" VerticalAlignment="Center">
			<Grid.Background>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#FF130727" Offset="0.04"/>
					<GradientStop Color="#FF2A0F58" Offset="1"/>
				</LinearGradientBrush>
			</Grid.Background>


			<Grid Visibility="Hidden" Name="Register">
				<Label Height="100px"  Foreground="White" Content="Register" FontSize="60px" Margin="356,66,325,914" />

				<Label Foreground="White" Content="USERNAME" FontSize="30px" Margin="100,164,659,862" RenderTransformOrigin="0.541,0.16" />
				<TextBox x:Name="RUsername" Width="755" HorizontalAlignment="Center" BorderThickness="1"  Foreground="White" FontSize="60px" Background="Transparent" BorderBrush="WhiteSmoke"    VerticalAlignment="Top" CaretBrush="Transparent" Margin="100,219,100,0" ></TextBox>

				<Label Foreground="White" Content="PASSWORD" FontSize="30px" Margin="100,307,633,719" RenderTransformOrigin="0.541,0.16" />
				<Grid Margin="100,367,100,630" VerticalAlignment="Center">
					<PasswordBox x:Name="RPassword" Width="755" HorizontalAlignment="Center" PasswordChar="•" BorderThickness="1"  Foreground="White" FontSize="60px" Background="Transparent" BorderBrush="WhiteSmoke" VerticalAlignment="Center" CaretBrush="Transparent" ></PasswordBox>
				</Grid>

				<Label Foreground="White" Content="CONFIRM PASSWORD" FontSize="30px" Margin="100,455,463,571" RenderTransformOrigin="0.541,0.16" />
				<Grid Margin="100,515,100,486">
					<PasswordBox x:Name="RPasswordConfirm" Width="755" HorizontalAlignment="Center" PasswordChar="•" BorderThickness="1"  Foreground="White" FontSize="60px" Background="Transparent" BorderBrush="WhiteSmoke" VerticalAlignment="Top" CaretBrush="Transparent" ></PasswordBox>

				</Grid>
				<Button Content="Create Account" HorizontalAlignment="Center" Margin="0,799,0,0" Background="#2be4c4" Foreground="White" FontSize="30px" VerticalAlignment="Top" Height="116" Width="725"/>
			</Grid>

			<Grid Name="Login">
				<Label Height="100px" HorizontalAlignment="Center"  Foreground="White" Content="Login" FontSize="60px" Margin="356,66,325,914" />

				<Label Foreground="White" Content="USERNAME" FontSize="30px" Margin="100,164,659,862" RenderTransformOrigin="0.541,0.16" />
				<TextBox x:Name="LUsername" Width="755" HorizontalAlignment="Center" BorderThickness="1"  Foreground="White" FontSize="60px" Background="Transparent" BorderBrush="WhiteSmoke"    VerticalAlignment="Top" CaretBrush="Transparent" Margin="100,219,100,0" ></TextBox>

				<Label Foreground="White" Content="PASSWORD" FontSize="30px" Margin="100,307,633,719" RenderTransformOrigin="0.541,0.16" />
				<Grid Margin="100,367,100,630" VerticalAlignment="Center">
					<PasswordBox x:Name="LPassword" Width="755" HorizontalAlignment="Center" PasswordChar="•" BorderThickness="1"  Foreground="White" FontSize="60px" Background="Transparent" BorderBrush="WhiteSmoke" VerticalAlignment="Center" CaretBrush="Transparent" ></PasswordBox>
				</Grid>
				<Button Content="Log in to Account" HorizontalAlignment="Center" Margin="0,799,0,0" Background="#2be4c4" Foreground="White" FontSize="30px" VerticalAlignment="Top" Height="116" Width="725"/>
			</Grid>




			

		</Grid>
	</Grid>
</Window>
